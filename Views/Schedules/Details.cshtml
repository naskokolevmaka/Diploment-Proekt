@model Airport.Models.Schedule

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детайли</h1>

<div>
    <h4>Разписание</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.scheduleDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.scheduleDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.departureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.departureTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destination.city)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destination.city)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Airline.airlineName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Airline.airlineName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model.flightId">Редактирай</a>
    <a class="btn btn-sm btn-info" asp-action="Index">Обратно в списъка</a>
</div>
