@model Airport.Models.Ticket

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детайли</h1>

<div>
    <h4>Билет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ticketCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ticketCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dateOfJourney)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateOfJourney)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.flightId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Schedule.flightId)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model.ticketId">Редактирай</a>
    <a class="btn btn-sm btn-info" asp-action="Index">Обратно в списъка</a>
</div>
