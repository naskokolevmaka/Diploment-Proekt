@model Airport.Models.Ticket

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редакция</h1>

<h4>Билет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ticketId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="flightId" class="control-label"></label>
                <select asp-for="flightId" class="form-control" asp-items="ViewBag.flightId"></select>
                <span asp-validation-for="flightId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ticketCount" class="control-label"></label>
                <input asp-for="ticketCount" class="form-control" />
                <span asp-validation-for="ticketCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateOfJourney" class="control-label"></label>
                <input asp-for="dateOfJourney" class="form-control" />
                <span asp-validation-for="dateOfJourney" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-info" asp-action="Index">Обратно в списъка</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
